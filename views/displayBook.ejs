<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>MyBookList</title>
</head>
<body>
  <%- include('partials/navbar.ejs') %>
  <div class="container">
    <br>
    <div class="text-center"><h2>Books</h2></div>
    <br>
    <table class="table table-hover small text-center">
      <thead>
        <tr>
          <th>Book Name</th>
          <th>Image</th>
          <th>Author</th>
          <th>Publisher</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i = 0; i < books.length; i++) { %>
          <tr>
            <td><a href="/book/<%= books[i].id %>"><%= books[i].name %></a></td>
            <td><img src="<%= books[i].image %>" width="20%"></td>
            <td><%= books[i].author %></td>
            <td><%= books[i].publisher %></td>
            <td>
              <a href="/editBook/<%= books[i].id %>" class="btn btn-warning btn-sm">Edit</a>
              <form action="/deleteBook/<%= books[i].id %>" method="post" style="display:inline;">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
